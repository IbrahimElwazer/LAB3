<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press an animal to hear its sound!"
        android:textAlignment="center"
        android:textSize="23sp"
        android:layout_marginVertical="30dp"
        />

    <LinearLayout
        android:id="@+id/first_line_linear"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/huuhkaja_image"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/huuhkaja" />

        <ImageView
            android:id="@+id/peippo_image"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:src="@drawable/peippo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_line_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/peukaloinen_image"
            android:layout_width="210dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:src="@drawable/peukaloinen" />

        <ImageView
            android:id="@+id/punatulkku_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/punatulkku" />





    </LinearLayout>

</LinearLayout>